# SPIST School Management System - Environment Configuration
# Copy this file to .env and fill in your actual values

# SECURITY WARNING: Keep this file secure and never commit .env to version control!

# =============================================================================
# CORE DJANGO SETTINGS
# =============================================================================

# Generate a new secret key for production: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
DJANGO_SECRET_KEY=your-secret-key-here-generate-new-one-for-production

# Set to False in production, True only for development
DJANGO_DEBUG=False

# Comma-separated list of allowed hosts (your domain names)
# Example: yourdomain.com,www.yourdomain.com,subdomain.yourdomain.com
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL (Production)
DB_ENGINE=django.db.backends.postgresql
DB_NAME=spist_db
DB_USER=spist_user
DB_PASSWORD=your-strong-database-password-here
DB_HOST=localhost
DB_PORT=5432

# SQLite (Development) - Comment out PostgreSQL settings above and use this for local dev
# DB_ENGINE=django.db.backends.sqlite3
# DB_NAME=db.sqlite3

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# Email Backend
# For development: django.core.mail.backends.console.EmailBackend
# For production: django.core.mail.backends.smtp.EmailBackend
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP Settings (for production)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=SPIST School System <noreply@spist.edu.ph>

# =============================================================================
# SECURITY SETTINGS (Production Only)
# =============================================================================

# Force HTTPS redirects (set to True in production with SSL certificate)
SECURE_SSL_REDIRECT=True

# Session security
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_HSTS_PRELOAD=True

# =============================================================================
# RECAPTCHA (Google reCAPTCHA v2)
# =============================================================================
# Get keys from: https://www.google.com/recaptcha/admin

RECAPTCHA_PUBLIC_KEY=your-recaptcha-site-key-here
RECAPTCHA_PRIVATE_KEY=your-recaptcha-secret-key-here

# =============================================================================
# REDIS CACHE (Optional - for production performance)
# =============================================================================

REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# FILE UPLOAD LIMITS
# =============================================================================

MAX_UPLOAD_SIZE=5242880  # 5MB in bytes
MAX_AVATAR_SIZE=2097152  # 2MB in bytes

# =============================================================================
# RATE LIMITING (Django Axes)
# =============================================================================

AXES_FAILURE_LIMIT=5  # Number of failed login attempts before lockout
AXES_COOLOFF_TIME=1  # Lockout time in hours

# =============================================================================
# SENTRY (Error Tracking - Optional)
# =============================================================================
# Get DSN from: https://sentry.io

SENTRY_DSN=your-sentry-dsn-here

# =============================================================================
# AWS S3 (Optional - for media file storage)
# =============================================================================

AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=ap-southeast-1  # Singapore

# =============================================================================
# TIMEZONE
# =============================================================================

TIME_ZONE=Asia/Manila

# =============================================================================
# ADDITIONAL SETTINGS
# =============================================================================

# Site URL (without trailing slash)
SITE_URL=https://yourdomain.com

# Admin email for error notifications
ADMIN_EMAIL=admin@spist.edu.ph

# Support email
SUPPORT_EMAIL=support@spist.edu.ph
